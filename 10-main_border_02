ip nat inside
ip ospf cost 5000
no shutdown
exit

interface GigabitEthernet0/1/0
description MAIN_BORDER_01
ip addres 172.16.1.2 255.255.255.252
ip nat inside
ip ospf cost 5000
no shutdown
exit

interface Loopback0
description MGMT
ip address 172.16.255.2 255.255.255.255
exit

interface Tunnel23
